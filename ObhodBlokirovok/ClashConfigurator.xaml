<Window x:Class="ObhodBlokirovok.ClashConfigurator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ObhodBlokirovok"
        mc:Ignorable="d"
        Title="Редактор правил Clash" Height="600" Width="800">

    <Window.Resources>
        <local:RuleTypeToIconConverter x:Key="RuleTypeToIconConverter"/>
    </Window.Resources>

    <!-- Основная панель -->
    <DockPanel LastChildFill="True" Margin="20">

        <!-- Нижняя панель статуса (пристыкована к низу) -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
            <TextBlock x:Name="ErrorText" Text="Готов к добавлению правил..." VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Вторая нижняя панель с кнопками -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Отмена" Click="Cancel_Click" Margin="0,0,10,0" MinHeight="32" Padding="14,0"/>
            <Button Content="Сохранить в YAML" Click="SaveYaml_Click" MinHeight="32" Padding="14,0"/>
        </StackPanel>

        <!-- Центральная часть с остальными элементами -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Панель добавления -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <ComboBox x:Name="RuleTypeComboBox" Width="160" Margin="0,0,10,0">
                    <ComboBoxItem Content="Домен (DOMAIN-SUFFIX)" Tag="DOMAIN-SUFFIX"/>
                    <ComboBoxItem Content="Ключевое слово (DOMAIN-KEYWORD)" Tag="DOMAIN-KEYWORD"/>
                    <ComboBoxItem Content="Имя процесса (PROCESS-NAME)" Tag="PROCESS-NAME"/>
                </ComboBox>

                <TextBox x:Name="RuleTextBox" Width="250" Margin="0,0,10,0"
                         VerticalContentAlignment="Center"
                         ToolTip="Введите домен или процесс"/>

                <TextBox x:Name="DisplayNameTextBox" Width="200" Margin="0,0,10,0"
                         VerticalContentAlignment="Center"
                         ToolTip="Название правила (необязательно)"/>

                <Button Content="Добавить" Click="AddRule_Click" MinHeight="32" Padding="10,0"/>
            </StackPanel>

            <!-- Список правил -->
            <ListBox x:Name="RulesListBox" Grid.Row="1"
                     HorizontalContentAlignment="Stretch"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="4" Margin="0,0,0,2">
                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Иконка -->
                                <TextBlock Grid.Column="0"
                                           Text="{Binding Type, Converter={StaticResource RuleTypeToIconConverter}}"
                                           FontSize="14"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>

                                <!-- Основной текст -->
                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                    <TextBlock Text="{Binding Value}"
                                               FontSize="13"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding DisplayName}"
                                               FontSize="11"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <!-- Удаление -->
                                <Button Grid.Column="2"
                                        Content="✖"
                                        Width="24"
                                        Height="24"
                                        Padding="0"
                                        VerticalAlignment="Center"
                                        Click="DeleteRuleInline_Click"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </DockPanel>
</Window>

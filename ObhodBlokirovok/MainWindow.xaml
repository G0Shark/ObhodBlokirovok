<Window x:Class="ObhodBlokirovok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ObhodBlokirovok"
        xmlns:wpf="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="ObhodBlokirovok" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Click="WindowClose"/>
                <MenuItem Name="AWGMenuStarter" Header="Запуск AWGProxy"/>
                <MenuItem Name="ClashStarter" Header="Запуск Clash"/>
            </MenuItem>
            <MenuItem Header="Конфиги">
                <MenuItem Header="Конфиг AWGProxy" Click="AWGProxyCfgOpen"/>
                <MenuItem Header="Конфиг Clash" Click="ClashCfgOpen"/>
                <MenuItem Header="Конфигуратор исключений Clash" Click="OpenClashConfigurator"/>
            </MenuItem>
            <MenuItem Header="Программа">
                <MenuItem Header="Настройки" Click="OpenSettings"/>
                <MenuItem Name="HostsChanger" Header="Перезаписать hosts" Click="ChangeHosts"/>
            </MenuItem>
        </Menu>
        <!-- Нижняя панель статуса -->
        <StatusBar DockPanel.Dock="Bottom" Padding="0">
            <StatusBar.Items>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="4,0">
                    <!-- Индикатор AWGProxy -->
                    <Ellipse x:Name="AWGProxyIndicator" Width="10" Height="10" Margin="0,0,6,0"
                             Fill="Gray" VerticalAlignment="Center" />
                    <TextBlock Text="AWGProxy" VerticalAlignment="Center" Margin="0,0,12,0"
                               MouseLeftButtonDown="AWGproxyClick" />

                    <!-- Индикатор Clash -->
                    <Ellipse x:Name="ClashIndicator" Width="10" Height="10" Margin="0,0,6,0"
                             Fill="Gray" VerticalAlignment="Center" />
                    <TextBlock Name="ClashText" Text="Clash" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Разделитель, чтобы оттолкнуть правый текст -->
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Width="Auto" />

                <!-- Текст справа -->
                <TextBlock x:Name="StatusRightText"
                           Text="Пропущено: 0 Ретранслировано: 0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Margin="0,0,10,0" />
            </StatusBar.Items>
        </StatusBar>


<!-- Основной вывод с табами -->
<Grid>
    <TabControl Margin="10,10,10,5" BorderThickness="0">
        <TabItem Header="Console">
            <RichTextBox x:Name="ConsoleOutput"
          IsReadOnly="True"
          Background="Black"
          Foreground="White"
          VerticalScrollBarVisibility="Auto"
          FontFamily="Cascadia Code, Consolas"
          FontSize="14"
          BorderThickness="0"
          Padding="5"/>
        </TabItem>
        <TabItem Header="AWGProxy">
            <RichTextBox x:Name="AWGProxyOutput"
                       IsReadOnly="True"
                       Background="Black"
                       Foreground="White"
                       VerticalScrollBarVisibility="Auto"
                       FontFamily="Cascadia Code, Consolas"
                       FontSize="14"
                       BorderThickness="0"
                       Padding="5"/>
        </TabItem>
        <TabItem Header="Clash">
            <RichTextBox x:Name="ClashOutput"
                       IsReadOnly="True"
                       Background="Black"
                       Foreground="White"
                       VerticalScrollBarVisibility="Auto"
                       FontFamily="Cascadia Code, Consolas"
                       FontSize="14"
                       BorderThickness="0"
                       Padding="5" />
        </TabItem>
    </TabControl>
</Grid>
    </DockPanel>
</Window>